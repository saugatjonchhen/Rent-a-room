<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp">

        <ImageView
            android:id="@+id/image_main"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:src="@drawable/pokhara_room" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/image_main"
            android:layout_marginBottom="20dp"
            android:background="#cc4f4f4f"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="7dp"
            android:text="रु 5000"
            android:textColor="#fff"
            android:textSize="18dp" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/image_main"
            android:layout_alignRight="@+id/image_main"
            android:layout_marginBottom="-20dp"
            android:layout_marginRight="20dp"

            android:src="@drawable/circular_img"
            app:civ_border_color="#FFFFFFFF"
            app:civ_border_width="2dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignRight="@+id/image_main"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/love_01" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_main"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/listing_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello World!!"
                android:textColor="#484848"
                android:textSize="15dp" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>