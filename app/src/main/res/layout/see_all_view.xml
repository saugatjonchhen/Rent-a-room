<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_main_view"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/pokhara_room" />

        <TextView
            android:id="@+id/price_view"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/image_main_view"
            android:layout_marginBottom="29dp"
            android:layout_marginLeft="7dp"
            android:background="#cc4f4f4f"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="7dp"
            android:text="रु 5000"
            android:textColor="#fff"
            android:textSize="18dp" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image_view"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignRight="@+id/image_main_view"
            android:layout_marginRight="20dp"
            android:layout_marginTop="210dp"
            android:src="@drawable/circular_img"
            app:civ_border_color="#FFFFFFFF"
            app:civ_border_width="2dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignRight="@+id/image_main_view"
            android:layout_marginRight="20dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/love_01" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_image_view"
            android:layout_marginTop="-5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/listing_name_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello World!!"
                android:textColor="#000"
                android:padding="10dp"
                android:textSize="15dp" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>